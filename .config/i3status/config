# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "ipv6"
order += "ethernet _first_"
order += "disk /"
order += "disk /home"
order += "load"
order += "memory"
order += "tztime local"

ipv6 {
	format_up = "IPv6: Enabled "
	format_down = "IPv6: Disabled "
}

ethernet _first_ {
        format_up = " LAN: %ip (%speed) "
        format_down = " LAN: down "
}

disk "/" {
        format = " Root: %used / %total (Free: %percentage_free) "
}

disk "/home" {
	format = " Home: %used / %total (Free: %percentage_free) "
}

memory {
        threshold_degraded = " 1G "
        format_degraded = " MEMORY < %available "
	format = " Memory: %used / %total | Used: %percentage_used | Free: %percentage_available "
}

tztime local {
        format = " %A %Y-%m-%d %H:%M "
}

load {
        format = "%1min"
}
