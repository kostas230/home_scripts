# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	markup = "pango"
}

order += "ipv6"
order += "ethernet _first_"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "disk /home_storage"
order += "memory"
order += "tztime local"

ipv6 {
	format_up = "IPv6: Enabled "
	format_down = "IPv6: Disabled "
}

ethernet _first_ {
        format_up = " LAN: %ip (%speed) "
        format_down = " LAN: down "
}

cpu_usage {
	format = " CPU: %usage Core 1: %cpu0 Core 2: %cpu1 Core 3: %cpu2 Core 4: %cpu3 "
}

disk "/" {
        format = " <span size='medium' font_weight='light'></span> %avail "
}

disk "/home" {
	format = " <span size='medium' font_weight='light'></span> %avail "
}

disk "/home_storage" {
	format = " <span size='medium' font_weight='light'></span> %avail "
}

memory {
	threshold_degraded = " 1G "
	format_degraded = " MEMORY < %available "
	format = " <span size='medium' font_weight='light'></span> %used (Available: %available) "
}

tztime local {
        format = " %A %Y-%m-%d %H:%M"
}
