order += "load"
order += "memory"
order += "tztime local"

ipv6 {
	format_up = "IPv6: Enabled "
	format_down = "IPv6: Disabled "
}

ethernet _first_ {
        format_up = " LAN: %ip (%speed) "
        format_down = " LAN: down "
}

