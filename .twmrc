NoGrabServer
RestartPreviousState
DecorateTransients
TitleFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
ResizeFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
MenuFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
IconFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
IconManagerFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*"

Color
{
	BorderColor		"#3465A4"
	BorderTileBackground	"#555753"
	BorderTileForeground	"#555753"

	DefaultBackground	"#232729"
	DefaultForeground	"#D3D7CF"

	TitleBackground		"#232729"
	TitleForeground		"#D3D7CF"

	MenuTitleBackground	"#3465A4"
	MenuTitleForeground	"#D3D7CF"
	
	MenuBackground		"#232729"
	MenuForeground		"#D3D7CF"
	
	MenuShadowColor		"Black"
	MenuBorderColor		"#555753"
	
	IconBackground		"#555753"
	IconForeground		"#D3D7CF"
	IconBorderColor		"#232729"
	
	IconManagerBackground	"#232729"
	IconManagerForeground	"#555753"
	IconManagerHighlight	"#3465A4"
}

NoTitle {
	"TWM Icon Manager"
}
IconManagerShow {
	"*"
}
IconManagerDontShow 
{
	"Oracle VM VirtualBox Manager" 
}
DontIconfiyByUnmapping {
	"Oracle VM VirtualBox Manager"
}        
        

ShowIconManager
IconRegion "200x300+950+2" North East 50 50
IconifyByUnmapping  # just use icon manager

MoveDelta 3
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }

Button1 = : root : f.menu "defops"

Button2 = : root : f.menu "TwmWindows"
Button3 = : root : f.menu "Progs"

Button1 = m : window|icon : f.function "move-or-lower"
Button2 = m : window|icon : f.iconify
Button3 = m : window|icon : f.function "move-or-raise"

Button1 = : title : f.function "move-or-raise"
Button2 = : title : f.raiselower
Button3 = : title : f.lower

Button1 = : icon : f.function "move-or-iconify"
Button2 = : icon : f.iconify

Button1 = : iconmgr : f.iconify
Button2 = : iconmgr : f.iconify
"Tab" = m : all : f.downiconmgr

menu "defops"
{
	"Twm" 		f.title
	"Iconify" 	f.iconify
	"Resize" 	f.resize
	"Move"  	f.move
	"Raise"  	f.raise
	"Lower"  	f.lower
	""  		f.nop
	"Focus"  	f.focus
	"Unfocus" 	f.unfocus
	"Show Iconmgr" 	f.showiconmgr
	"Hide Iconmgr" 	f.hideiconmgr
	""  		f.nop
	"Terminal"  	f.exec "exec urxvt &"
	""  		f.nop
	"Kill"  	f.destroy
	"Delete"	f.delete
	""  		f.nop
	"Lock Screen"  	f.exec "exec xscreensaver-command -lock &"
	""      	f.nop
	"Restart" 	f.restart
	"Exit"  	f.exec "killall -15 Xorg"
}


menu "Progs" 
{
	"Apps" 		f.title
	"Terminal" 	f.exec "exec urxvt &"
	"Browser"      	f.exec "exec firefox &"
	"File Manager"	f.exec "exec pcmanfm &"
	"Steam"		f.exec "exec steam &"
	""		f.nop
	"Settings"	f.menu "settings"
}
menu "settings"
{
	"Appearance"	f.exec "exec lxappearance &"
}

menu "windowmenu"
{
	"Iconify"  	f.iconify
	"RaiseLower"  	f.raiselower
	"Refresh"  	f.winrefresh
	"Focus"   	f.focus
	""   		f.nop
	"Kill"   	f.destroy
}
